<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="#000000"
    android:alpha="0.87"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBackdropImage"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/flicks_backdrop_placeholder" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivBackdropImage"
        android:text="Movie Title"
        android:textColor="#ffffff"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="244dp"
        android:layout_below="@+id/tvTitle"
        android:layout_toEndOf="@+id/ivBackdropImage"
        android:text="A synopsis of movie now playing"
        android:textColor="#ffffff"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <ImageView
        android:id="@+id/tvPlay"
        android:layout_width="246dp"
        android:layout_height="130dp"
        android:layout_alignBottom="@+id/ivBackdropImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/video_play_overlay" />
</RelativeLayout>